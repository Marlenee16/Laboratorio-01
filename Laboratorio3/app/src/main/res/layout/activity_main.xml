<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_gap"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/primertexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_gap"
        android:layout_marginTop="40dp"
        android:text="@string/texto_1"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contador_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/valores"
        android:textColor="@color/black"
        android:textSize="@dimen/enormous_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/primertexto" />

    <ImageView
        android:id="@+id/five_cents"
        android:layout_width="@dimen/default_square_image_size"
        android:layout_height="@dimen/default_square_image_size"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/ten_cents"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contador_money"
        app:layout_constraintVertical_chainStyle="spread"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents"
        android:layout_width="@dimen/default_square_image_size"
        android:layout_height="@dimen/default_square_image_size"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cents"
        app:layout_constraintTop_toBottomOf="@+id/contador_money"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/dollar"
        android:layout_width="@dimen/default_square_image_size"
        android:layout_height="@dimen/default_square_image_size"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_cents"
        app:layout_constraintTop_toBottomOf="@+id/ten"
        app:srcCompat="@drawable/one_dollar" />

    <ImageView
        android:id="@+id/quarter_cents"
        android:layout_width="@dimen/default_square_image_size"
        android:layout_height="@dimen/default_square_image_size"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/dollar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five"
        app:srcCompat="@drawable/quarter" />

    <TextView
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$0.05"
        app:layout_constraintEnd_toEndOf="@+id/five_cents"
        app:layout_constraintStart_toStartOf="@+id/five_cents"
        app:layout_constraintTop_toBottomOf="@+id/five_cents" />

    <TextView
        android:id="@+id/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$0.10"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents"
        app:layout_constraintStart_toStartOf="@+id/ten_cents"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents" />

    <TextView
        android:id="@+id/quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$0.25"
        app:layout_constraintEnd_toEndOf="@+id/quarter_cents"
        app:layout_constraintStart_toStartOf="@+id/quarter_cents"
        app:layout_constraintTop_toBottomOf="@+id/quarter_cents" />

    <TextView
        android:id="@+id/one_do"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$1.00"
        app:layout_constraintEnd_toEndOf="@+id/dollar"
        app:layout_constraintStart_toStartOf="@+id/dollar"
        app:layout_constraintTop_toBottomOf="@+id/dollar" />
</androidx.constraintlayout.widget.ConstraintLayout>
